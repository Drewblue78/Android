<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C9C9C">

        <TextView
            android:id="@+id/Quiz"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Video Game Quiz"
            android:textColor="#FDFDFD"
            android:textSize="20dp" />

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_scrollFlags="scroll|enterAlways"></androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            app:tabMode="scrollable">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Nintendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EF1616"
                android:text="Nintendo"
                android:tint="#EFEFEF" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Playstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playstation" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Xbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xbox" />
        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.main.PlaceholderFragment">

            <TextView
                android:id="@+id/section_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Console"
                android:textSize="30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="131dp" />

            <Button
                android:id="@+id/Playstation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playstation"
                tools:layout_editor_absoluteX="163dp"
                tools:layout_editor_absoluteY="208dp" />

            <Button
                android:id="@+id/Nintendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nintnedo"
                app:layout_constraintEnd_toStartOf="@+id/Playstation"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="208dp" />

            <Button
                android:id="@+id/Xbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xbox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Playstation"
                tools:layout_editor_absoluteY="208dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>